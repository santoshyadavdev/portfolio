---
export interface Props {
  tags?: string[];
}

const { tags } = Astro.props;
---

{
  tags && (
    <div class="flex flex-row flex-wrap items-start gap-4 lg:gap-2 mt-2">
      {tags.map((tag) => (
        <a
          href={`${import.meta.env.BASE_URL}tag/${encodeURIComponent(tag)}/`}
          class="inline-block py-2 lg:py-1 px-2 rounded text-purple-900 hover:bg-purple-300 hover:text-black bg-pink-100 font-semibold text-xs"
        >
          #{tag}
        </a>
      ))}
    </div>
  )
}
