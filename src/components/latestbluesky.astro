---
import type { BlueskyPost } from "../lib/bluesky";
import { Icon } from "astro-icon/components";
import BlueskyPostCard from "./blueskypost.astro";

export interface Props {
  posts: BlueskyPost[];
}

const { posts } = Astro.props;

// Show only the 3 most recent posts on the home page
const recentPosts = posts.slice(0, 3);
---

{
  recentPosts.length > 0 && (
    <div class="bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl mx-auto py-8 sm:py-12 lg:py-16 lg:max-w-none">
          <div class="flex flex-row items-center flex-wrap">
            <h2 class="text-2xl md:text-4xl font-extrabold text-purple-800 dark:text-purple-200">
              Latest from Bluesky
            </h2>
            <a
              href={import.meta.env.BASE_URL + "bluesky"}
              class="inline-block px-2 py-2 md:px-6 md:py-3 mt-2 ml-4 rounded-md bg-purple-600 hover:bg-pink-600 text-white dark:bg-purple-300 dark:hover:bg-pink-300 dark:text-black font-bold text-base md:text-lg"
            >
              All Posts
            </a>
            <a
              href="https://bsky.app/profile/santoshyadav.dev"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-2 py-2 md:px-6 md:py-3 mt-2 ml-4 rounded-md text-purple-800 bg-purple-100 hover:bg-pink-200 dark:text-purple-100 dark:bg-purple-900 dark:hover:bg-pink-900 font-bold text-base md:text-lg"
            >
              Follow Me
              <Icon name="mdi:open-in-new" class="w-4 h-4 ml-2" />
            </a>
          </div>
          <div class="mt-6 flex flex-wrap -mx-4">
            {recentPosts.map((post) => (
              <BlueskyPostCard post={post} />
            ))}
          </div>
        </div>
      </div>
    </div>
  )
}
