---
export interface Props {
  login: string;
  name?: string | null;
  avatarUrl: string;
  url: string;
}

const { login, name, avatarUrl, url } = Astro.props;
const displayName = name || login;
---

<div class="group relative">
  <div
    class="relative w-full h-80 bg-white dark:bg-gray-800 rounded-lg shadow-xl overflow-hidden group-hover:shadow-2xl transition-shadow duration-300 sm:aspect-w-2 sm:aspect-h-1 sm:h-64 lg:aspect-w-1 lg:aspect-h-1"
  >
    <div class="flex flex-col items-center justify-center p-6 h-full">
      <img
        src={avatarUrl}
        alt={displayName}
        class="w-32 h-32 rounded-full object-cover mb-4 border-4 border-purple-200 dark:border-purple-700"
      />
      <h3
        class="text-xl font-semibold text-gray-900 dark:text-gray-100 text-center mb-2"
      >
        {displayName}
      </h3>
      {
        name && login !== name && (
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">@{login}</p>
        )
      }
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="mt-auto inline-block py-2 px-4 rounded-lg bg-purple-600 hover:bg-pink-600 dark:bg-purple-500 dark:hover:bg-pink-500 text-white text-sm font-medium transition-colors duration-200"
      >
        View Profile
      </a>
    </div>
  </div>
</div>
