---
import type { BlueskyPost } from "../utils/bluesky";
import { Icon } from "astro-icon/components";
import Img from "./img.astro";

export interface Props {
  post: BlueskyPost;
}

const { post } = Astro.props;

// Format the date to a human-readable format
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
    hour: "2-digit",
    minute: "2-digit"
  });
};

// Create a link to the Bluesky post
const postUrl = `https://bsky.app/profile/${post.author.handle}/post/${post.uri.split('/').pop()}`;
---

<article class="p-4 md:w-1/2 lg:w-1/3">
  <div
    class="h-full border-1 border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-800 rounded-lg shadow-xl overflow-hidden p-2"
  >
    <!-- Author Header -->
    <div class="flex items-center p-4 pb-2">
      {post.author.avatar && (
        <Img
          src={post.author.avatar}
          alt={post.author.displayName || post.author.handle}
          class="w-10 h-10 rounded-full mr-3"
        />
      )}
      <div class="flex-1">
        <div class="flex items-center gap-2">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100">
            {post.author.displayName || post.author.handle}
          </h3>
          <Icon name="logos:bluesky" class="w-4 h-4" />
        </div>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          @{post.author.handle}
        </p>
      </div>
    </div>

    <!-- Post Content -->
    <div class="px-4 pb-4">
      <p class="text-gray-800 dark:text-gray-200 mb-3 leading-relaxed">
        {post.record.text}
      </p>

      <!-- Post Metadata -->
      <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-3">
        <Icon class="w-4 h-4 mr-1" name="mdi:clock" />
        <time datetime={post.record.createdAt}>
          {formatDate(post.record.createdAt)}
        </time>
      </div>

      <!-- Engagement Stats -->
      <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400 border-t border-gray-200 dark:border-gray-600 pt-3">
        <div class="flex items-center space-x-4">
          {post.replyCount !== undefined && (
            <div class="flex items-center">
              <Icon class="w-4 h-4 mr-1" name="mdi:comment-outline" />
              <span>{post.replyCount}</span>
            </div>
          )}
          {post.repostCount !== undefined && (
            <div class="flex items-center">
              <Icon class="w-4 h-4 mr-1" name="mdi:repeat" />
              <span>{post.repostCount}</span>
            </div>
          )}
          {post.likeCount !== undefined && (
            <div class="flex items-center">
              <Icon class="w-4 h-4 mr-1" name="mdi:heart-outline" />
              <span>{post.likeCount}</span>
            </div>
          )}
        </div>
        
        <!-- View on Bluesky Link -->
        <a
          href={postUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-purple-600 hover:text-pink-600 dark:text-purple-300 dark:hover:text-pink-300 font-medium"
        >
          View on Bluesky
          <Icon class="w-3 h-3 ml-1 inline" name="mdi:external-link" />
        </a>
      </div>
    </div>
  </div>
</article>