---
import { Icon } from "astro-icon/components";

export interface Props {
  icon: string;
  title: string;
  year?: string | number;
  url?: string;
}

const { icon, title, year, url } = Astro.props;
---

<div class="group relative">
  <a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="block relative w-full h-64 bg-white dark:bg-gray-800 rounded-lg shadow-xl overflow-hidden group-hover:shadow-2xl transition-shadow duration-300"
  >
    <div class="flex flex-col items-center justify-center p-6 h-full">
      <Icon name={icon} class="w-20 h-20 mb-4" />
      <h3
        class="text-lg font-bold text-gray-900 dark:text-gray-100 text-center mb-2"
      >
        {title}
      </h3>
      {
        year && (
          <span class="text-gray-500 dark:text-gray-400 inline-flex items-center leading-none text-sm">
            <Icon class="w-4 h-4 mr-1" name="mdi:calendar" />
            Since {year}
          </span>
        )
      }
    </div>
  </a>
</div>
