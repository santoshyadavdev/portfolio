---
import type { Frontmatter } from "../config";
import SEO from "../components/seo.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Gallery from "../components/gallery.astro";
import CommandCenter from "../components/commandcenter.astro";
import { ClientRouter } from "astro:transitions";

export interface Props {
  frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/x-icon"
      href={new URL(import.meta.env.BASE_URL + "favicon.ico", Astro.url)}
    />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#7c3aed" />
    <meta name="generator" content={Astro.generator} />
    <SEO frontmatter={frontmatter} />
    <ClientRouter />

    <!-- Umami Analytics -->
    {
      import.meta.env.PUBLIC_UMAMI_WEBSITE_ID && (
        <script
          async
          src="https://cloud.umami.is/script.js"
          data-website-id={import.meta.env.PUBLIC_UMAMI_WEBSITE_ID}
        />
      )
    }

    <script is:inline>
      // Theme initialization - runs on initial load and after each navigation
      function initTheme() {
        if (
          localStorage.theme === "dark" ||
          (!("theme" in localStorage) &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      }

      // Run on initial load
      initTheme();

      // Re-run after View Transitions navigation
      document.addEventListener("astro:page-load", initTheme);
    </script>
    <style is:global>
      body .accordion__header {
        font-size: 60%;
      }
      .accordion__item .accordion__header {
        border: 2px solid #202020 !important;
      }

      .accordion__wrapper {
        list-style-type: none !important;
      }

      .accordion__panel {
        border: 2px solid #202020 !important;
      }

      li a {
        word-break: break-word;
      }
    </style>
    <style is:inline>
      [x-cloak] {
        display: none !important;
      }
    </style>
    {
      frontmatter.extra?.includes("math") && (
        <link
          rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/katex@0.16.1/dist/katex.min.css"
          integrity="sha384-pe7s+HmY6KvqRkrRRUr4alQJ0SkmzCft3RpK1ttGMa7qk8Abp/MEa/4wgceRHloO"
          crossorigin="anonymous"
        />
      )
    }
    {
      frontmatter.extra?.includes("markmap") && (
        <script
          is:inline
          data-astro-rerun
          src="https://cdn.jsdelivr.net/npm/markmap-autoloader"
        />
      )
    }
    <slot name="in-head" />
  </head>
  <body class="dark:bg-gray-900">
    <Header transition:persist />
    <slot />
    {frontmatter.gallery && <Gallery folder={frontmatter.gallery} />}
    <slot name="before-footer" />
    <Footer />
    <CommandCenter transition:persist />
    {
      frontmatter.extra?.includes("markmap") && (
        <script src="https://cdn.jsdelivr.net/npm/markmap-autoloader" />
      )
    }
  </body>
</html>
