---
import { Icon } from "astro-icon/components";
import Base from "../layouts/base.astro";
import PageHero from "../components/pagehero.astro";
import { SiteMetadata } from "../config";
import { getSocialStats, type SocialStats } from "../lib/socialstats";

// Fetch social stats at build time
const socialStats = await getSocialStats();

// Map platform names to their stat keys and labels
const platformStatMap: Record<
  string,
  { key: keyof SocialStats; label: string }
> = {
  Github: { key: "github", label: "followers" },
  Youtube: { key: "youtube", label: "subscribers" },
  Bluesky: { key: "bluesky", label: "followers" },
  Twitter: { key: "twitter", label: "followers" },
};

// Format large numbers with K/M suffix
function formatCount(count: number): string {
  if (count >= 1_000_000) {
    return (count / 1_000_000).toFixed(1).replace(/\.0$/, "") + "M";
  }
  if (count >= 1_000) {
    return (count / 1_000).toFixed(1).replace(/\.0$/, "") + "K";
  }
  return count.toString();
}

// Get follower/subscriber count for a platform
function getStatForPlatform(
  name: string,
): { count: string; label: string } | null {
  const mapping = platformStatMap[name];
  if (!mapping) return null;

  const count = socialStats[mapping.key];
  if (count === undefined) return null;

  return {
    count: formatCount(count),
    label: mapping.label,
  };
}

const frontmatter = {
  title: "Let's Connect",
  description: "Connect with me on your preferred platform",
  coverSVG: "../images/svg/undraw/santosh_yadav.svg",
  socialImage: "../images/undraw/santosh_yadav.jpg",
  publishDate: SiteMetadata.buildTime,
};
---

<Base frontmatter={frontmatter}>
  <header>
    <PageHero
      title={frontmatter.title}
      coverSVG={frontmatter.coverSVG}
      socialImage={frontmatter.socialImage}
    />
  </header>
  <main>
    <section
      class="mb-20 text-gray-800 dark:text-gray-100 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8"
    >
      <div class="py-8 lg:py-12">
        <p class="text-center text-lg text-gray-600 dark:text-gray-400 mb-12">
          I'd love to hear from you! Choose your preferred platform to get in
          touch.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            SiteMetadata.social.map(
              (method) =>
                method.link && (
                  <a
                    href={method.link}
                    target={method.name === "Email" ? "_self" : "_blank"}
                    rel={
                      method.name === "Email"
                        ? undefined
                        : "noopener noreferrer"
                    }
                    class="group block"
                  >
                    <div class="relative w-full h-full bg-white dark:bg-gray-800 rounded-lg shadow-xl overflow-hidden group-hover:shadow-2xl transition-shadow duration-300 p-8">
                      <div class="flex flex-col items-center justify-center text-center">
                        <Icon name={method.icon} class="w-16 h-16 mb-4" />
                        <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-2">
                          {method.name}
                        </h3>
                        {(() => {
                          const stat = getStatForPlatform(method.name);
                          return stat ? (
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                              {stat.count} {stat.label}
                            </p>
                          ) : null;
                        })()}
                      </div>
                    </div>
                  </a>
                ),
            )
          }
        </div>
      </div>
    </section>
  </main>
</Base>
